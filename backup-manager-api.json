          "identifier" : {
            "type" : "string",
            "format" : "string"
          },
          "active" : {
            "type" : "boolean",
            "format" : "bool"
          },
          "address" : {
            "type" : "string",
            "format" : "ip"
          },
          "port" : {
            "type" : "integer",
            "format" : "int32"
          },
          "username" : {
            "type" : "string",
            "format" : "string"
          },
          "password" : {
            "type" : "string",
            "format" : "password"
          }
        }
      } ]
